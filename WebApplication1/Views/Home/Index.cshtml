<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
<script type="text/javascript">
    var str = "@((string)ViewBag.mssg)";
    if (str !== null && str !== '') {
        if (str == "Success") {
            swal({
                title: "",  //สิ่งที่เปลี่ยนได้ คือหัว
                text: str,  // ข้อความที่แสดง
                type: 'success' // อันนี้คือประเภทว่าจะให้เป็นแบบไหน
                // timer: 2000 // หน่วงเวลา

            })
        } else if (str == "Error_Location"){
            swal({
                title: "",  //สิ่งที่เปลี่ยนได้ คือหัว
                text: "กรูณาใส่ LOCATION ให้ถูกต้อง !!",  // ข้อความที่แสดง
                type: 'warning' // อันนี้คือประเภทว่าจะให้เป็นแบบไหน
                // timer: 2000 // หน่วงเวลา

            })
        }
        else {
            swal({
                title: "",  //สิ่งที่เปลี่ยนได้ คือหัว
                text: str,  // ข้อความที่แสดง
                type: 'error' // อันนี้คือประเภทว่าจะให้เป็นแบบไหน
                // timer: 2000 // หน่วงเวลา

            })
        }
        //swal("", str,"warning")



    }
</script>


